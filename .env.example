# Balancer Platform Environment Configuration
# Copy this file to .env and modify values as needed

# Environment
ENVIRONMENT=development

# API Configuration
API__DEBUG=true
API__TITLE=Balancer API
API__DESCRIPTION=AI-powered supply chain optimization platform
API__VERSION=1.0.0

# CORS Configuration
API__CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
API__CORS_METHODS=["*"]
API__CORS_HEADERS=["*"]

# Rate Limiting
API__RATE_LIMIT_REQUESTS=100
API__RATE_LIMIT_WINDOW=60

# AI Configuration
AI__FORECAST_FREQUENCY=weekly
AI__FORECAST_HORIZON=12
AI__DEFAULT_SERVICE_LEVEL=0.95
AI__SAFETY_STOCK_MULTIPLIER=1.65
AI__SEASONALITY_ADJUSTMENT_FACTOR=0.2

# Supply Optimization
AI__LEAD_TIME_BUFFER_DAYS=2
AI__BATCH_SIZE_OPTIMIZATION=true
AI__CAPACITY_UTILIZATION_TARGET=0.85

# Distribution VRP
AI__VEHICLE_CAPACITY_DEFAULT=1000
AI__MAX_ROUTE_DISTANCE=500.0
AI__VRP_ALGORITHM=greedy
AI__OPTIMIZATION_ITERATIONS=100
AI__TRANSPORT_CAPACITY_LIMIT=10000.0

# LightGBM Parameters
AI__LIGHTGBM_PARAMS__OBJECTIVE=regression
AI__LIGHTGBM_PARAMS__METRIC=rmse
AI__LIGHTGBM_PARAMS__BOOSTING_TYPE=gbdt
AI__LIGHTGBM_PARAMS__NUM_LEAVES=31
AI__LIGHTGBM_PARAMS__LEARNING_RATE=0.05
AI__LIGHTGBM_PARAMS__FEATURE_FRACTION=0.9
AI__LIGHTGBM_PARAMS__BAGGING_FRACTION=0.8
AI__LIGHTGBM_PARAMS__BAGGING_FREQ=5
AI__LIGHTGBM_PARAMS__VERBOSE=-1

# Database Configuration (for future expansion)
# DATABASE__DATABASE_URL=postgresql://user:password@localhost:5432/balancer
# DATABASE__POOL_SIZE=10
# DATABASE__TIMEOUT=30

# Cache Configuration (for future expansion)
