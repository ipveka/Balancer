# Production Environment Configuration
ENVIRONMENT=production

# API Configuration
API__DEBUG=false
API__TITLE=Balancer API
API__VERSION=1.0.0

# CORS Configuration (restrict in production)
API__CORS_ORIGINS=["https://yourdomain.com", "https://app.yourdomain.com"]
API__CORS_METHODS=["GET", "POST", "PUT", "DELETE"]
API__CORS_HEADERS=["Content-Type", "Authorization"]

# Rate Limiting (stricter in production)
API__RATE_LIMIT_REQUESTS=60
API__RATE_LIMIT_WINDOW=60

# AI Configuration
AI__FORECAST_FREQUENCY=weekly
AI__FORECAST_HORIZON=12
AI__DEFAULT_SERVICE_LEVEL=0.95
AI__VRP_ALGORITHM=greedy

# LightGBM Parameters (optimized for production)
AI__LIGHTGBM_PARAMS__OBJECTIVE=regression
AI__LIGHTGBM_PARAMS__METRIC=rmse
AI__LIGHTGBM_PARAMS__BOOSTING_TYPE=gbdt
AI__LIGHTGBM_PARAMS__NUM_LEAVES=31
AI__LIGHTGBM_PARAMS__LEARNING_RATE=0.05
AI__LIGHTGBM_PARAMS__FEATURE_FRACTION=0.9
AI__LIGHTGBM_PARAMS__VERBOSE=-1